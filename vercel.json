{
  "functions": {
    "app/**/*.ts": {
      "runtime": "nodejs20.x"
    },
    "app/**/*.tsx": {
      "runtime": "nodejs20.x"
    }
  },
  "crons": [
    {
      "path": "/api/cron/payment-reminders",
      "schedule": "0 * * * *"
    },
    {
      "path": "/api/cron/loan-status",
      "schedule": "0 */6 * * *"
    },
    {
      "path": "/api/cron/defaults",
      "schedule": "0 */6 * * *"
    },
    {
      "path": "/api/cron/sync-loans",
      "schedule": "*/15 * * * *"
    }
  ],
  "env": {
    "NEXT_PUBLIC_APP_URL": "https://loancast.app"
  }
}